@model WebBanHangOnline.Models.EF.New
@{
    ViewBag.Title = "Chi tiết tin tức";

}
<link rel="stylesheet" type="text/css" href="~/Content/asset/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .title-news {
        font-size: 25px;
        border-bottom: 1px solid;
        padding: 16px 0;
        margin-bottom: 16px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .row-item-news {
        margin-bottom: 20px;
    }
</style>
<div class="container news_section_container">

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news">@Model.Title</h1>
            </div>
        </div>
        <div class="row">
            <div class=" col-md-12">
                @Model.Description
            </div>
            <div class=" col-md-12">
                @Html.Raw(Model.Detail)
            </div>
        </div>
    }

