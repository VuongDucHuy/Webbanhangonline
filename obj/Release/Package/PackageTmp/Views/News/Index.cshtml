@model IEnumerable<WebBanHangOnline.Models.EF.New>
@{
    ViewBag.Title = "Tin tức";
}
<link rel="stylesheet" type="text/css" href="~/Content/asset/styles/main_styles.css">
<style>
    .news_section_container{
        margin-top:180px;

    }
    .title-news{
        font-size:25px;
        border-bottom:1px solid;
        padding:16px 0;
        margin-bottom:16px;
    }
    .img-box img{
        max-width:100%;
        max-height:100%;
    }
    .row-item-news{
        margin-bottom:20px;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Tin tức</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="row row-item-news">
                        <div class="col-md-3">
                            <div class="img-box">
                                <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="content-box">
                                <h4><a href="/@item.Alias-n@(item.id)" title="@item.Title">@item.Title</a></h4>
                                <div class="description-box">
                                    @item.Description
                                </div>
                            </div>
                        </div>
                    </div>
                    
 
                }
            }
        </div>
</div>
</div>
